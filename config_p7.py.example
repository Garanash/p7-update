#!/usr/bin/env python3
# -*- coding: utf-8 -*-
#
# Настройка подключения к P7-Офис Document Server
# Документация: https://support.r7-office.ru/category/document_server/
#
# P7_DOC_SERVER_URL - URL вашего P7 Document Server
# Документация: https://support.r7-office.ru/category/document_server/settings-ds/
# Пример: "http://192.168.1.100:8080" или "https://doc-server.company.com"
P7_DOC_SERVER_URL = "http://your-p7-doc-server:8080"
#
# P7_ACCESS_TOKEN - токен доступа для API (если требуется)
# Документация: https://support.r7-office.ru/category/document_server/api-document_server/
# Может быть пустым "", если токен не требуется
P7_ACCESS_TOKEN = ""
#
# P7_FILE_ID - ID файла в Document Server или имя файла
# Документация: https://support.r7-office.ru/category/document_server/api-document_server/
# Пример: "Сборка Москва.xlsx" или "file-id-12345"
P7_FILE_ID = "your-file-id-or-filename"
#
# P7_VERIFY_SSL - проверка SSL сертификата (True/False)
# Установите False для локальных серверов с самоподписанными сертификатами
# По умолчанию: True (проверка включена)
P7_VERIFY_SSL = False

